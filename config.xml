<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns   = "http://www.w3.org/ns/widgets"
    xmlns:gap   = "http://phonegap.com/ns/1.0"
    id          = "com.cloud86.taskapp"
    versionCode = "10"
    version     = "1.0.0" >

<!-- versionCode is optional and Android only -->

  <name>Your Tasks</name>

  <description>
      This app for records your mini tasks. Record tasks for every day.
  </description>

  <author href="https://build.phonegap.com" email="sides.developer@gmail.com">
      Max Zamolin
  </author>

  <preference name="BackgroundColor" value="#4761e2"/>
  <platform name="android">
              <icon src="img/icon/icon.png" density="ldpi" />
              <icon src="res/android/mdpi.png" density="mdpi" />
              <icon src="res/android/hdpi.png" density="hdpi" />
              <icon src="res/android/xhdpi.png" density="xhdpi" />
  </platform>

</widget>